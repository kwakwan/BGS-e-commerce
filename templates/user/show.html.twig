{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 style="padding-top: 40px">User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            </tr>
        
            <tr>
                <th>Picture</th>
                <td><img src="{{ user.picture }}"></td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ user.number }}</td>
            </tr>
           
            <tr>
                <th>Road_name</th>
                <td>{{ user.roadName }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ user.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ user.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">
    <button class="btn btn-dark">Back to list</button>
    </a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">
    <button class="btn btn-dark" style="margin-left:20px">Edit</button>
    </a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
{% block footer %}{% endblock %}